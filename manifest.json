{
  "manifest_version": 3,
  "name": "RubyTweaks",
  "author": "rubythecutie",
  "version": "0.0.3",
  "description": "Ruby's cute tweaks to make things better :3",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": [
    "tabs", "storage", "activeTab", "scripting"
  ],
  "host_permissions": [
    "*://*.discord.com/*",
    "*://*.flightradar24.com/*",
    "*://*.spotify.com/*",
    "*://*.chatgpt.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "RubyTweaks@rubythecutie.github.io",
      "strict_min_version": "115.0",
      "data_collection_permissions": {
        "required": [ "none" ]
      }
    },
    "gecko_android": {
      "strict_min_version": "115.0"
    }
  }
}