{
  "manifest_version": 3,
  "name": "RubyTweaks",
  "version": "0.0.2",
  "description": "Ruby's cute tweaks to make things better :3",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": [
    "tabs", "storage", "activeTab", "scripting"
  ],
  "host_permissions": [
    "*://*.discord.com/*",
    "*://*.flightradar24.com/*",
    "*://*.spotify.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup/popup.html"
  }
}
